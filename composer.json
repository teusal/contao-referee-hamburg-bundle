{
    "name": "teusal/contao-referee-hamburg-bundle",
    "description": "Management of referees in Hamburg within Contao Open Source CMS.",
    "keywords": [
        "contao",
        "referee",
        "hamburg"
    ],
    "license": "LGPL-3.0-or-later",
    "type": "contao-bundle",
    "authors": [
        {
            "name": "Alexander Teuscher",
            "homepage": "https://github.com/teusal"
        }
    ],
    "support": {
        "issues": "https://github.com/teusal/contao-referee-hamburg-bundle/issues",
        "source": "https://github.com/teusal/contao-referee-hamburg-bundle"
    },
    "require": {
        "php": "^7.4 || ^8.0",
        "contao/core-bundle": "^4.13",
        "contao/newsletter-bundle": "^4.13",
        "phpoffice/phpspreadsheet": "^1.29",
        "symfony/config": "^5.4",
        "symfony/dependency-injection": "^5.4",
        "symfony/http-kernel": "^5.4",
        "teusal/contao-phone-number-normalizer-bundle": "^1.0"
    },
    "require-dev": {
        "bamarni/composer-bin-plugin": "^1.5",
        "contao/manager-plugin": "^2.0",
        "friendsofphp/php-cs-fixer": "^2.12",
        "phpunit/phpunit": "^9.5",
        "symfony/phpunit-bridge": "^6.1"
    },
    "conflict": {
        "contao/manager-plugin": "<2.0 || >=3.0"
    },
    "autoload": {
        "psr-4": {
            "Teusal\\ContaoRefereeHamburgBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Teusal\\ContaoRefereeHamburgBundle\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "bamarni/composer-bin-plugin": true,
            "contao-components/installer": true,
            "contao/manager-plugin": true,
            "php-http/discovery": true
        }
    },
    "extra": {
        "bamarni-bin": {
            "bin-links": false,
            "target-directory": "tools"
        },
        "contao-manager-plugin": "Teusal\\ContaoRefereeHamburgBundle\\ContaoManager\\Plugin"
    },
    "scripts": {
        "all": [
            "@unit-tests",
            "@ecs",
            "@phpstan"
        ],
        "ecs": "@php tools/ecs/vendor/bin/ecs check src tests --config ecs.php --fix --ansi",
        "phpstan": "@php tools/phpstan/vendor/bin/phpstan analyze --ansi",
        "unit-tests": "@php vendor/bin/phpunit --colors=always"
    }
}
